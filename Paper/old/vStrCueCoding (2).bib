isbn = {1529-2401 (Electronic)$\backslash$r0270-6474 (Linking)},
issn = {0270-6474},
journal = {Journal of Neuroscience},
keywords = {accumbens,behavior,devaluation,electrophysiology,motivation,rat},
month = {jan},
number = {4},
